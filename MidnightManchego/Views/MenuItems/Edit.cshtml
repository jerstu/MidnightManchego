@model Midnight_Manchego.Models.MenuItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubMenu" class="control-label"></label>
                <input asp-for="SubMenu" class="form-control" />
                <span asp-validation-for="SubMenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                Current Image
                <img src="@Model.ImageStream" width="250" />
                <br />
                <label asp-for="ImageFile" class="control-label"></label>
                <input id="browse" asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <br />
                <input type="checkbox" id="deletePhoto" name="deletePhoto" value="true" onclick="toggleUpload()">
                <label for="deletePhoto"> Delete Photo</label>
                <br />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function toggleUpload() {
        var deletePhoto = document.getElementById("deletePhoto");
        var browse = document.getElementById("browse");
        if (document.getElementById("deletePhoto").checked == true) {
            document.getElementById("browse").disabled = true;          
        }
        if (document.getElementById("deletePhoto").checked == false) {
            document.getElementById("browse").disabled = false;
        }
    }
</script>
}

